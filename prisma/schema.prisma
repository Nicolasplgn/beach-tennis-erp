generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  name      String?
  email     String   @unique
  password  String?
  leagues   League[]
  createdAt DateTime @default(now())
}

model League {
  id          String    @id @default(cuid())
  name        String
  description String?
  logo        String?
  startDate   DateTime?
  endDate     DateTime?
  status      String    @default("DRAFT")
  adminId     String
  admin       User      @relation(fields: [adminId], references: [id], onDelete: Cascade)
  players     Player[]
  teams       Team[]
  matches     Match[]
  createdAt   DateTime  @default(now())
}

model Player {
  id       String  @id @default(cuid())
  name     String
  nickname String?
  level    String?
  leagueId String
  league   League  @relation(fields: [leagueId], references: [id], onDelete: Cascade)
  teams    Team[]  @relation("PlayerTeams")
  
  wins     Int     @default(0)
  losses   Int     @default(0)
  gamesWon Int     @default(0)
  createdAt DateTime @default(now())
}

model Team {
  id          String   @id @default(cuid())
  name        String
  leagueId    String
  league      League   @relation(fields: [leagueId], references: [id], onDelete: Cascade)
  players     Player[] @relation("PlayerTeams")
  
  // --- AQUI ESTAVA O ERRO ANTES, AGORA EST√Å CORRIGIDO ---
  matchesA    Match[]  @relation("TeamA")
  matchesB    Match[]  @relation("TeamB")
  wonMatches  Match[]  @relation("Winner")
  createdAt   DateTime @default(now())
}

model Match {
  id          String   @id @default(cuid())
  leagueId    String
  league      League   @relation(fields: [leagueId], references: [id], onDelete: Cascade)
  
  round       Int
  position    Int
  
  // --- REMOVIDO O @unique DAQUI ---
  nextMatchId String?  
  nextMatch   Match?   @relation("NextMatch", fields: [nextMatchId], references: [id], onDelete: SetNull, onUpdate: NoAction)
  prevMatches Match[]  @relation("NextMatch")

  teamAId     String?
  teamA       Team?    @relation("TeamA", fields: [teamAId], references: [id])
  
  teamBId     String?
  teamB       Team?    @relation("TeamB", fields: [teamBId], references: [id])
  
  winnerId    String?
  winner      Team?    @relation("Winner", fields: [winnerId], references: [id])

  scoreA      Int?     @default(0)
  scoreB      Int?     @default(0)
  status      String   @default("PENDING")
  createdAt   DateTime @default(now())
}